  <body>
  
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <ul>
    {{#if req.user}}
      
        <span><li class="user-nav"><a href="/users/{{req.user._id}}" ><img class="profile-pic" src="{{req.user.profilePic}}"></a></li></span>
        <span><li class="user-nav"><a href="/users/{{req.user._id}}"><span>{{req.user.name.first}}</span></a></li></span>
    {{/if}}
    <li><span><a href="/events">Events</a>
      <img src="/images/plus-icon.png" id="show-events" onclick="showList('show-events', 'hide-events', 'all-events')">
      <img src="/images/minus-icon.png" style="display:none" id="hide-events" onclick="showList('hide-events', 'show-events', 'all-events')">
      </span>
      {{#if req.user.events}}
        <ul class="sub-list">
          {{#each req.user.events}}
            <li style="display:none" class="all-events"><span><a href="/events/{{this._id}}"><abbr>{{this.name}}</abbr></a></li>
          {{/each}}
        </ul>
      {{/if}}</li>
    <li><span><a href="/groups">Groups</a>
        <img src="/images/plus-icon.png" id="show-groups" onclick="showList('show-groups', 'hide-groups', 'all-groups')">
        <img src="/images/minus-icon.png" style="display:none" id="hide-groups" value="Done" onclick="showList('hide-groups', 'show-groups', 'all-groups')">
        </span>
      {{#if req.user.groups}}
        <ul class="sub-list">
          {{#each req.user.groups}}
            <li style="display:none" class="all-groups"><span><a href="/groups/{{this._id}}">{{this.name}}</a></li>
          {{/each}}
        </ul>
      {{/if}}</li>
    
    <li><span><a href="/auth/logout">Logout :(</a></span></li>

    </ul>

  </div>

<!-- Use any element to open the sidenav -->
