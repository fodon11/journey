<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <nav id="nav">
      
      <text>{{#if req.user}}<a href="/users/{{req.user._id}}"><img class="profile-pic" src="{{req.user.profilePic}}">Welcome {{req.user.name.first}}</a>{{/if}}</text>
      
      <ul>
        {{#if req.user}}
        <li><a href="/auth/logout">Logout :(</a></li>
        <li><a href="/events">Your Events</a></li>
        {{else}}
        <li><a href="/auth/signup">Sign Up!</a></li>
        <li><a href="/auth/login">Login!</a></li>
        {{/if}}
      </ul>
    </nav>

    {{{body}}}

    <script src='/javascripts/script.js'></script>
  </body>
</html>
