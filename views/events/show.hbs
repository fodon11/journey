<img src="{{event.eventPic}}" class="event-pic">
{{#if event.yes}}
    <a href="/events/edit/{{event._id}}"><button>Edit {{event.name}}</button></a>
    {{else}}
    <a href="/events/edit/pictures/{{event._id}}"><button>Add Pictures</button></a>
{{/if}}
{{event.name}}<br>
{{event.description}}<br>
{{#if event.address.zip}}
    {{#with event.address}}
        {{street}}
        {{apt}}
        {{city}}
        {{state}}
        {{zip}}
    {{/with}}
{{/if}}
<br>
Start {{#with event.start}}
    Date: {{date}}<br>
    Time: {{time}}
{{/with}}
<br>
End {{#with event.end}}
    Date: {{date}}<br>
    Time: {{time}}
{{/with}}
